<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8DF2FF"
    tools:context=".Blue">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="93dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Simon Says"
        android:textColor="#E91E63"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textColor="#E91E63"/>

    <Button
        android:id="@+id/greenBtn"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_below="@+id/titleText"
        android:layout_marginTop="50dp"
        android:backgroundTint="#1AFF00"
        android:maxWidth="80dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/yellowBtn"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_below="@+id/greenBtn"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F7FF00"
        android:maxWidth="80dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/blueBtn"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_below="@+id/yellowBtn"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00AEFF"
        android:maxWidth="80dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/redBtn"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_below="@+id/blueBtn"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF0000"
        android:maxWidth="80dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/restartBtn"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_below="@+id/yellowBtn"
        android:layout_marginTop="20dp"
        android:backgroundTint="#BB00FF"
        android:maxWidth="80dp"
        android:layout_centerHorizontal="true"
        android:text="Restart"
        android:textColor="@color/white"
        android:visibility="invisible"/>


</RelativeLayout>